<Page x:Class="AdminTool.GUI.Pages.PageWhitelist"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdminTool.GUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageWhitelist"
      IsVisibleChanged="Page_IsVisibleChanged">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        
        <!--Заголовок-->
        <Grid Grid.Row="0">
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Text="Белый список"
                Style="{StaticResource PagesHeaderTextBlock}"
                Margin="10,10,0,0"
        />
        </Grid>
        <!--Таблица-->
        <Grid Grid.Row="1">
            <DataGrid 
                x:Name="dgWhiteList"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                Style="{StaticResource DataGridRegular}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Header="ID"
                        Binding="{Binding PlayerID}"
                        Width="{Binding PlayerID}"/>
                    <DataGridTextColumn
                        Header="Имя пользователя"
                        Binding="{Binding PlayerNickname}"
                        Width="{Binding PlayerNickname}"/>
                    <DataGridTextColumn
                        Header="Steam64"
                        Binding="{Binding Steam64}"
                        Width="{Binding Steam64}"/>
                    <DataGridTemplateColumn Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <!--Панель с действиями-->
                                <StackPanel
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,10,0">
                                    <!--Изменить данные-->
                                    <Button 
                                        Margin="10,0,0,0"
                                        x:Name="btnChangeData"
                                        Style="{StaticResource DatabaseButton}"
                                        Click="btnChangeData_Click">
                                        <!--Вставить фото-->
                                        <Image
                                            Source="/Resources/СhangeLogo.png"
                                            Style="{StaticResource DatabaseButtonIcon}"
                                         />
                                    </Button>
                                    <!--Удалить запись-->
                                    <Button 
                                        Margin="10,0,0,0"
                                        x:Name="btnDeleteData"
                                        Style="{StaticResource DatabaseButton}"
                                        Click="btnDeleteData_Click">
                                        <!--Вставить фото-->
                                        <Image
                                           Source="/Resources/DeleteLogo.png"
                                           Style="{StaticResource DatabaseButtonIcon}"
                                         />
                                    </Button>
                                </StackPanel>
                                
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <!--Действия-->
        <Grid Grid.Row="2">
            <StackPanel
                Orientation="Horizontal"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

                <Button x:Name="btnAddPlayer"
                        Style="{StaticResource RegularButton}"
                        Content="Добавить"
                        Click="btnAddPlayer_Click"
                />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
