<Page x:Class="AdminTool.GUI.Pages.PageGreeting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdminTool.GUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="640"
      Title="PageGreeting"
      IsVisibleChanged="Page_IsVisibleChanged">

    <Grid>
        <TextBlock HorizontalAlignment="Center"
                   x:Name="tblGreeting"
                   VerticalAlignment="Center"
                   Style="{StaticResource PagesHeaderTextBlock}"
                   FontSize="24"
                   Text="$Добро пожаловать, администратор"
        />
    </Grid>
</Page>
